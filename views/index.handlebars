<h2>Burger List</h2>


<div class="container">

  <div class="row">
    <div class="col-6">
      <h3>Burgers I haven't tried!</h3>
      <ul class="list-group">
        {{#each burgers}}
        {{#unless devoured}}
        {{> burgers/burger-block devoure=true}}
        {{/unless}}
        {{/each}}
      </ul>
    </div>
    <div class="col-6">
      <h3>Burgers I have tried</h3>
      <ul class="list-group">
        {{#each burgers}}
        {{#if devoured}}
        {{> burgers/burger-block devoure=false}}
        {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>

</div>

<div class="container light-background">
  <div class="row subtitle">
    <h2 class="subtitle">Add a burger</h2>
  </div>

  <div class="row add-block">
    <form class="create-form">

      <div class="form-group">
        <label for="bu">Burger Name:</label>
        <input type="text" id="bu" name="name" class="form-control">
      </div>

      <div class="form-group">
        <h4>devoured?</h3>

          <div class="form-check">
            <input class="form-check-input" id="exampleRadios1" type="radio" name="devoured" value="1" checked>
            <label class="form-check-label" for="exampleRadios1">Devoured</label>
          </div>

          <div class="form-check">
            <input class="form-check-input" id="exampleRadios2" type="radio" name="devoured" value="0">
            <label class="form-check-label" for="exampleRadios2">Need to eat</label>
          </div>
          <button type="submit" class="btn btn-warning">Add Burger</button>

      </div>

    </form>
  </div>
</div>